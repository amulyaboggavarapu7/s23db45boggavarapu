extends layout

block content
  h1=title
  - let result = results
  
  .container-fluid
    .row
      each item, index in result
        .col-sm-2(onclick=`buy(${index})`)
          p Material: #{item.material} 
          p Price: #{item.price} 
          p Style:#{item.style}
  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }
          
 
  