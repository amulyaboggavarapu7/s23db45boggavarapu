extends layout

block content
  h1=title
  - let items = results
  
  div(class="container-fluid")
    div(class="row m-1")
      each item in items
        - let destination = `/Earrings/update?id=${item._id}`
        div(class="row-sm-2 m-1") Earring #{item.material}(#{item.price}) is #{item.style}
        button.btn(class="btn-primary ml-1", onclick=`dispatch("${destination}")`) Update

  script.
    function dispatch(path) {
      window.location.href = path;
    }
