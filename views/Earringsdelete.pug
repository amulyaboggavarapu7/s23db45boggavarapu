extends layout
 
block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let Earringsid = toShow._id
    - let material = toShow.material
    - let price= toShow.price
    - let style = toShow.style
    - let actionid = "/resource/Earrings/" + Earringsid
 
    script.
      let actionid = "#{actionid}"
 
    div
      div.row
        div(class='EarringAttr mr-3') Earrings ID is:
        div #{Earringsid}
      div.row
        div(class='EarringAttr mr-3') Earrings material is:
        div #{material}
      div.row
        div(class='EraringAttr mr-3') Earrings price is:
        div #{price}
      div.row
        div(class='EraringAttr mr-3') Earrings style is:
        div #{style}
     
 
    button(class="btn btn-danger m-2", onclick="deleteOnid()") Delete
    button(class="btn btn-secondary m-2", onclick="cancel()") Cancel
 
    script.
      function cancel() {
        // Go back to the home page for the costume collection
        window.location.href='/Earrings'
      }
 
    script.
      function deleteOnid() {
        console.log("starting delete");
        // delete first
        fetch(actionid, {
          method: 'DELETE' // Don't need a body for the delete
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeeded");
          window.location.href='/Earrings';
          // TODO handle body
        }).catch((error) => {
          // TODO handle error
          alert("Delete failed: " + error);
        });
      }
